[32m+[m[32mexport default function SocialLinks({[m
[32m+[m[32m  fbPageUrl,[m
[32m+[m[32m  instagramUrl,[m
[32m+[m[32m  whatsappUrl,[m
[32m+[m[32m  contactEmail,[m
[32m+[m[32m  contactPhone,[m
[32m+[m[32m  fbPageEnabled,[m
[32m+[m[32m  instagramEnabled,[m
[32m+[m[32m  whatsappEnabled,[m
[32m+[m[32m  contactEmailEnabled,[m
[32m+[m[32m  contactPhoneEnabled,[m
[32m+[m[32m}: SocialLinksProps) {[m
[32m+[m[32m  const items: Array<{ key: string; label: string; href?: string }> = [];[m
[32m+[m
[32m+[m[32m  if (fbPageEnabled && fbPageUrl) {[m
[32m+[m[32m    items.push({ key: "fb", label: "Facebook", href: fbPageUrl });[m
[32m+[m[32m  }[m
[32m+[m[32m  if (instagramEnabled && instagramUrl) {[m
[32m+[m[32m    items.push({ key: "ig", label: "Instagram", href: instagramUrl });[m
[32m+[m[32m  }[m
[32m+[m[32m  if (whatsappEnabled && whatsappUrl) {[m
[32m+[m[32m    items.push({ key: "wa", label: "WhatsApp", href: whatsappUrl });[m
[32m+[m[32m  }[m
[32m+[m[32m  if (contactEmailEnabled && contactEmail) {[m
[32m+[m[32m    items.push({ key: "mail", label: "Email", href: `mailto:${contactEmail}` });[m
[32m+[m[32m  }[m
[32m+[m[32m  if (contactPhoneEnabled && contactPhone) {[m
[32m+[m[32m    items.push({ key: "phone", label: "Phone", href: `tel:${contactPhone}` });[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  if (items.length === 0) return null;[m
[32m+[m
[32m+[m[32m  return ([m
[32m+[m[32m    <section className="mt-4 space-y-2">[m
[32m+[m[32m      <h2 className="text-sm font-medium text-gray-800">Stay connected</h2>[m
[32m+[m[32m      <div className="flex flex-wrap gap-2 text-sm">[m
[32m+[m[32m        {items.map((it) => ([m
[32m+[m[32m          <a[m
[32m+[m[32m            key={it.key}[m
[32m+[m[32m            href={it.href}[m
[32m+[m[32m            target="_blank"[m
[32m+[m[32m            rel="noopener noreferrer"[m
[32m+[m[32m            className="inline-flex items-center justify-center rounded-full w-16 h-16 border border-transparent bg-white shadow-sm hover:shadow text-gray-900 hover:ring-2 hover:ring-black/10"[m
[32m+[m[32m          >[m
[32m+[m[32m            <Icon kind={it.key} />[m
[32m+[m[32m            <span className="sr-only">{it.label}</span>[m
[32m+[m[32m          </a>[m
[32m+[m[32m        ))}[m
[32m+[m[32m      </div>[m
[32m+[m[32m    </section>[m
[32m+[m[32m  );[m
[32m+[m[32m}[m
